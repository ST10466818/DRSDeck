<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AB2B2B"
    tools:context=".`ResultsActivity.kt`">

    <TextView
        android:id="@+id/displayBox"
        android:layout_width="364dp"
        android:layout_height="244dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="334dp"
        android:background="#F8F7F7"
        android:fontFamily="@font/bowlby_one"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="330dp"
        android:layout_height="82dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="598dp"
        android:fontFamily="@font/bowlby_one"
        android:text="DRS DECK"
        android:textColor="#F1EDED"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="93dp"
        android:layout_height="97dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="557dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="77dp"
        android:backgroundTint="#090909"
        android:fontFamily="@font/bowlby_one"
        android:text="Leave"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reviewBox"
        android:layout_width="357dp"
        android:layout_height="135dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="411dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="185dp"
        android:background="#E8DEDE"
        android:fontFamily="@font/bowlby_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>